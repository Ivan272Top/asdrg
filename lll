#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int main()
{
    setlocale(0,"");
    printf("Введите пожалуйста любое натурально число(Число>0): ");
    int n=0;
    scanf("%d",&n);
    int d[n-1];
    for(int i=1;i<=n;i++)
    {
        d[i-1]=0;
        for(int j=1;j<n;j++)
        {
            if(i%j==0)
            {
                d[i-1]+=j;
            }
        }
        d[i-1]-=i;
    }
    for(int i=1;i<=n;i++)
    {
        for(int j=1;j<=n;j++)
        {
            if(j==d[i-1])
            {
                if(i==d[j-1])
                {
                    printf(" %4d   %4d \n",i,j);
                    d[i-1]=1;
                }
            }
        }
    }
    return 0;
}
